<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.administrator.zhiboviews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LiveMessageActivity" />
        <activity android:name=".DianZanActivity" />
        <activity
            android:name=".ShuRuActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".RefreshRecyclerViewActivity" />
        <activity android:name=".VideoPlayerActivity" />
        <activity android:name=".GuidVideoActivity" />
        <activity android:name=".ApplicationDialogActivity" />

        <service android:name=".service.DialogService" />

        <activity android:name=".AnimatiorActivity"></activity>
    </application>

</manifest>